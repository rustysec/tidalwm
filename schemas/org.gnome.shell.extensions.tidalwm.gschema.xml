<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/org/gnome/shell/extensions/tidalwm/" id="org.gnome.shell.extensions.tidalwm">
        <key name="window-gaps" type="i">
            <default>20</default>
            <description>The space between windows once they are tiled</description>
        </key>
        <key name="tile-mode" type="i">
            <default>0</default>
            <description>How to arrange new windows, (0 = spiral, 1 = i3 style, 2 = binary)</description>
        </key>
        <key name="rotate-windows" type="as">
            <default><![CDATA[['<Control><Alt>o']]]></default>
            <description>Rotate window tiling order</description>
        </key>
        <key name="float-window" type="as">
            <default><![CDATA[['<Control><Alt>f']]]></default>
            <description>Toggle floating current window</description>
        </key>
        <key name="inactive-opacity" type="i">
            <default>90</default>
            <description>Opacity of unfocused windows</description>
        </key>
        <key name="always-float" type="as">
            <default><![CDATA[['']]]></default>
            <description>Comma separated list of window classes to always float</description>
        </key>
        <key name="smart-gaps" type="b">
            <default>false</default>
            <description>Gaps only enabled when more than one window is present</description>
        </key>
        <key name="initial-direction" type="i">
            <default>0</default>
            <description>Initial direction to split (0 = horizontal, 1 = vertical)</description>
        </key>
        <key name="log-level" type="i">
            <default>0</default>
            <description>Logging verbosity (0 = info, 1 = debug, 2 = verbose)</description>
        </key>
    </schema>
</schemalist>
